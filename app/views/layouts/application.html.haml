!!!
%html
  %head
    %title PR Topgun
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application', media: 'all'

  %body
    %header
      .container
        .title
          .brand
            %a{ href: '../' } PR Topgun
        .menu
          %nav
            - if current_user
              %li= link_to 'Dashboard', dashboard_path
              %li= link_to 'Logout', signout_path
            - else
              %li= link_to image_tag('login-with-github.png'), '/auth/github', alt: 'Login'

    = yield
